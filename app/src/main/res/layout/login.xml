<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bc_login">


    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_marginRight="40dp"
        android:background="@drawable/sp_rectangle_root"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <EditText
            android:typeface="monospace"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="20dp"
            android:id="@+id/et_username"
            android:hint="Email"
            android:fontFamily="serif"

            android:backgroundTint="#FFF"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
        
        <View
            android:id="@+id/v_separator"
            android:layout_below="@+id/et_username"
            android:background="#858484"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/v_separator"
            android:layout_marginTop="1dp"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:typeface="monospace" />
    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_login"
        android:tint="#FF001B"
        android:backgroundTint="#FFD700"
        android:layout_width="68dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/rl_input"
        android:textSize="40sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        />


    <TextView
        android:id="@+id/tv_forget"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_input"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_below="@id/tv_forget"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="288dp"
        android:backgroundTint="#FFEB3B"
        android:text="Register"
        android:textAllCaps="true"
        android:textColor="#F44336"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>